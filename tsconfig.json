{
  "compilerOptions": {
    "paths": {
      "~components/*": ["./src/components/*"],
      "~assets/*": ["./src/assets/*"],
      "~composables/*": ["./src/composables/*"],
    },
    "strict": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client", "@types/node", "nums-to-words-ru-lang"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./types",
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
